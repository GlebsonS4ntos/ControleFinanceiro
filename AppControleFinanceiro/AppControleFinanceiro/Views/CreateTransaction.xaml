<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppControleFinanceiro.Views.CreateTransaction"
             Title="CreateTransaction">
    <VerticalStackLayout Spacing="40">
        <Border BackgroundColor="DarkGreen" Padding="15" Margin="10" Stroke="Transparent" StrokeShape="RoundRectangle 30">
            <Grid RowDefinitions="Auto" ColumnDefinitions="*, 30" >
                <Label 
                    Text="Novo" 
                    HorizontalOptions="Center"
                    TextColor="White"
                    Grid.Column="0"
                    Grid.Row="0"/>
                <Image 
                    Source="close.png"
                    HorizontalOptions="Center" 
                    Grid.Column="1"
                    Grid.Row="0"
                    WidthRequest="17"
                    HeightRequest="17">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="BackToMainPage"/>
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
        </Border>
        
        <Grid RowDefinitions="*" ColumnDefinitions="*,*" Margin="10, 10">
            <RadioButton IsChecked="True" Content="Receita" Grid.Column="0" Grid.Row="0"/>
            <RadioButton Content="Despesa" Grid.Column="1" Grid.Row="0" />
        </Grid>
        
        <Entry Placeholder="Nome da Transação" Margin="15, 0"/>
        <DatePicker Margin="15, 0" Format="dd/MM/yyyy"/>
        <Entry Placeholder="Valor" Margin="15, 0"/>

        <Button Text="Salvar" BackgroundColor="DarkBlue" HorizontalOptions="CenterAndExpand" CornerRadius="20"/>
    </VerticalStackLayout>
</ContentPage>